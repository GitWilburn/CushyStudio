{
    "editor.formatOnSave": true,
    "peacock.color": "#0b4867",
    "editor.indentSize": 4,
    "css.lint.unknownAtRules": "ignore",
    "tailwindCSS.classAttributes": ["class", "className", "tw"],
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#106895",
        "activityBar.background": "#106895",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#f06fc4",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#106895",
        "statusBar.background": "#0b4867",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#106895",
        "statusBarItem.remoteBackground": "#0b4867",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#0b4867",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#0b486799",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "[css]": {
        // "editor.defaultFormatter": null
        "editor.formatOnSave": false
    },
    // automatically format code with prettier for all contributors
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.associations": {
        "**/cushy-deck.json": "jsonc"
    },
    "typescript.tsserver.experimental.enableProjectDiagnostics": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "pasteImage.path": "site/assets",
    "search.exclude": {
        "out": true, // set this to false to include "out" folder in search results
        "public": true,
        "package-lock.json": true
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",

    "markdown.extension.toc.omittedFromToc": {
        "library/CushyStudio/tutorial/reusable-ui-kits/readme.md": [
            //
            "# Modular decks example"
        ],
        // Use a path relative to your workspace.
        "README.md": [
            //
            "# üõãÔ∏è CushyStudio",
            "## _The **easiest** and most **powerful** Stable Diffusion frontend_",
            "# Table of content",
            "## Table of content"
            // "# Introduction",
            // "## Also omitted"
        ],
        // Or an absolute path for standalone files.
        "/home/foo/Documents/todo-list.md": ["## Shame list (I'll never do these)"]
    }
}
